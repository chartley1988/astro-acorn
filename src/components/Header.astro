---
import logo from "../assets/svg/AcornLogo.svg";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
---

<header>
  <cluster-l justify="space-between" align="flex-start">
    <!-- <Image src={logo} class="logo" height={80} alt="Chartley Designs Logo" /> -->
    <Icon name="acorn2" size={64} />

    <cluster-l
      role="list"
      justify="center"
      align="center"
      space="calc( var(--space)/2 )"
    >
      <li class="menu_entry"><a>Home</a></li>
      <li class="menu_entry"><a>Services</a></li>
      <li class="menu_entry"><a>About</a></li>
      <li>
        <sl-button variant="primary">
          <span class="menu_entry">Get a Quote</span>
        </sl-button>
      </li>
    </cluster-l>
  </cluster-l>
</header>

<style>
  header {
    padding: var(--space-s);
  }

  li {
    padding: 0.25rem;
    list-style: none;
  }

  a {
    color: black;
    transform: translateY(0);
  }

  a:hover {
    color: var(--green);
    transform: translateY(-0.3ch);
  }

  .menu_entry {
    font-weight: 900;
    font-size: var(--step-0);
  }

  [data-icon] {
    color: var(--primary);
  }
</style>
