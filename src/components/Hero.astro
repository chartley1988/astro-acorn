---
import Image from "astro/components/Image.astro";
import { Icon } from "astro-icon/components";
---

<section>
  <cluster-l justify="center" align="center" space="var(--space-m)">
    <stack-l space="var(--space-xs)" class="text">
      <h1>Acorn</h1>
      <p>A minimalist starter for Astro</p>
      <sl-button variant="primary">Get Started</sl-button>
    </stack-l>
    <Icon name="acorn2" size={120} />
  </cluster-l>
</section>

<style>
  section {
    background-color: var(--gray);
  }

  .text {
    margin: var(--space-m);
  }
</style>
